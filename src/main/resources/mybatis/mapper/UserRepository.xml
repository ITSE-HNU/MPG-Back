<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ghstudio.pairprogram.dao.repository.UserRepository">
    <resultMap id="userMap" type="com.ghstudio.pairprogram.dao.entity.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
    </resultMap>

    <select id="getUserByUsername" resultMap="userMap">
        SELECT id, username, password
        FROM users
        WHERE username = #{username}
    </select>

    <select id="getUserByID" resultMap="userMap">
        SELECT id, username, password
        FROM users
        WHERE id = #{id}
    </select>

    <select id="queryUser" resultMap="userMap">
        SELECT id, username,password
        FROM users
        <where>
            <if test="username != null and username!= ''">
                and username LIKE #{username}
            </if>

            <if test="currentUserId != null and currentUserId != 0">
                and id != #{currentUserId}
            </if>
        </where>
        LIMIT #{limit}
        OFFSET #{offset}
    </select>

    <select id="getUserCount" resultType="Integer">
        SELECT count(*)
        FROM users
        <where>
            <if test="username != null and username!= ''">
                and username LIKE #{username}
            </if>

            <if test="currentUserId != null and currentUserId != 0">
                and id != #{currentUserId}
            </if>
        </where>
    </select>

    <insert id="addUser" parameterType="com.ghstudio.pairprogram.dao.entity.User" useGeneratedKeys="true"
            keyProperty="id" keyColumn="id">
        insert into users (username, password)
        VALUES (#{username}, #{password})
    </insert>

    <update id="updateUser" parameterType="com.ghstudio.pairprogram.dao.entity.User" useGeneratedKeys="true"
            keyColumn="id" keyProperty="id">
        update users
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>

            <if test="password != null and password != ''">
                password = #{password},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteUserById">
        delete
        from users
        where id = #{id}
    </delete>
</mapper>
